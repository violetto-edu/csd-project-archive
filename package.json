{
  "name": "project-archive",
  "version": "1.0.0",
  "description": "Jekyll site with Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/style.css --minify",
    "watch:css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/style.css --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "update:batches": "node scripts/update-batches.js",
    "precommit": "npm run update:batches && npm run build:css && npm run format"
  },
  "devDependencies": {
    "csv-parse": "^6.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.1"
  }
}
